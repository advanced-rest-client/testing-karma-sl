{
  "name": "@advanced-rest-client/testing-karma-sl",
  "version": "1.1.0",
  "description": "Testing with karma using SauceLabs",
  "scripts": {
    "test": "karma start demo/karma.conf.js",
    "test:watch": "karma start demo/karma.conf.js --auto-watch=true --single-run=false",
    "test:legacy": "karma start demo/karma.conf.js --compatibility all --coverage",
    "test:legacy:watch": "karma start demo/karma.conf.js --compatibility all --auto-watch=true --single-run=false",
    "test:sl": "karma start demo/karma.sl.conf.js --compatibility all --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/advanced-rest-client/testing-karma-sl.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "web-components",
    "testing",
    "karma",
    "sauce-labs"
  ],
  "author": "Pawel Psztyc",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/advanced-rest-client/testing-karma-sl/issues"
  },
  "homepage": "https://github.com/advanced-rest-client/testing-karma-sl#readme",
  "files": [
    "*.js"
  ],
  "dependencies": {
    "@open-wc/testing-karma": "^3.2.32",
    "karma-sauce-launcher": "^2.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "deepmerge": "^4.2.2",
    "mocha": "^7.0.1"
  }
}
